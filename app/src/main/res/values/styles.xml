<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PasswordEditTextStyle">
        <item name="android:textColor">@color/boxfill</item>
        <item name="android:textColorHint">@color/user</item>

        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomNavLabelStyleActive" parent="TextAppearance.MaterialComponents.Caption">
<!--        Those are selected that are Active just like Home and Profile and so on.-->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BottomNavLabelStyleInactive" parent="TextAppearance.MaterialComponents.Caption">
<!--        Those are not selected.-->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/your_custom_blue</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="CustomSearchViewTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
<!--        <item name="android:textColorHint">@color/your_custom_blue</item>-->
    </style>


</resources>
